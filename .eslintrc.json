{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": true
      }
    ],
    "eol-last": [
      "error"
    ],
    "react/react-in-jsx-scope": 0 //This should be removed once the project is `webpack`-ed
  }
}
